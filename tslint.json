{
    "extends": "tslint:recommended",
    "rulesDirectory": [
        "node_modules/tslint-eslint-rules/dist/rules"
    ],
    "rules": {
        "one-line": false,
        "max-classes-per-file": false,
        "curly": true,
        "semicolon": true,
        "eofline": true,
        "trailing-comma": [
            true,
            {
                "esSpecCompliant": true
            }
        ],
        "no-console": false,
        "ban-types": false,
        "no-bitwise": false,
        "no-empty": false,
        "brace-style": [
            true,
            "stroustrup",
            {
              "allowSingleLine": true
            }
          ]
    }
}