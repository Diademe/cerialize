{
  "compilerOptions": {
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": false,
    "removeComments": false,
    "target": "es6",
    "module": "es6",
    "stripInternal": true,
    "strict": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "declaration": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "spec",
    "dist"
  ]
}